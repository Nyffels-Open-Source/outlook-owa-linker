<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
        xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
        xsi:type="MailApp">

  <Id>f3f50d0b-1a2b-4c5d-9e6f-abcdef123456</Id>
  <Version>1.0.0.2</Version>
  <ProviderName>Nyffels Open Source</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="OWA Linker"/>
  <Description DefaultValue="Copy OWA deeplinks and open Outlook items by ID."/>

  <IconUrl DefaultValue="https://nyffels-open-source.github.io/outlook-owa-linker/assets/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://nyffels-open-source.github.io/outlook-owa-linker/assets/icon-80.png"/>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.8"/>
    </Sets>
  </Requirements>

  <Permissions>ReadItem</Permissions>

  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>

  <VersionOverrides
          xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
          xsi:type="VersionOverridesV1_0">

    <Hosts>
      <Host xsi:type="Mailbox">
        <DesktopFormFactor>
          <FunctionFile resid="functionFileUrl"/>

          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="grpNyffels">
                <Label resid="groupLabel"/>

                <Control xsi:type="Button" id="btnCopyOwa">
                  <Label resid="btnCopyLabel"/>
                  <Supertip>
                    <Title resid="btnCopyLabel"/>
                    <Description resid="btnCopyDesc"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="icon16"/>
                    <bt:Image size="32" resid="icon32"/>
                    <bt:Image size="80" resid="icon80"/>
                  </Icon>
                  <Action xsi:type="ExecuteFunction" FunctionName="copyOwaLink"/>
                </Control>

                <Control xsi:type="Button" id="btnOpenByIdPane">
                  <Label resid="btnOpenLabel"/>
                  <Supertip>
                    <Title resid="btnOpenLabel"/>
                    <Description resid="btnOpenDesc"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="icon16"/>
                    <bt:Image size="32" resid="icon32"/>
                    <bt:Image size="80" resid="icon80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="taskpaneUrl"/>
                  </Action>
                </Control>

              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="icon16" DefaultValue="https://nyffels-open-source.github.io/outlook-owa-linker/assets/icon-16.png"/>
        <bt:Image id="icon32" DefaultValue="https://nyffels-open-source.github.io/outlook-owa-linker/assets/icon-32.png"/>
        <bt:Image id="icon80" DefaultValue="https://nyffels-open-source.github.io/outlook-owa-linker/assets/icon-80.png"/>
      </bt:Images>

      <bt:Urls>
        <bt:Url id="functionFileUrl" DefaultValue="https://nyffels-open-source.github.io/outlook-owa-linker/functions.html"/>
        <bt:Url id="taskpaneUrl"     DefaultValue="https://nyffels-open-source.github.io/outlook-owa-linker/taskpane.html"/>
      </bt:Urls>

      <bt:ShortStrings>
        <bt:String id="groupLabel"    DefaultValue="OWA Linker"/>
        <bt:String id="btnCopyLabel"  DefaultValue="Copy OWA Link"/>
        <bt:String id="btnOpenLabel"  DefaultValue="Open by ID"/>
      </bt:ShortStrings>

      <bt:LongStrings>
        <bt:String id="btnCopyDesc" DefaultValue="Copy a stable OWA deeplink to this message."/>
        <bt:String id="btnOpenDesc" DefaultValue="Paste an ItemId or OWA link in the taskpane and open it here."/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>